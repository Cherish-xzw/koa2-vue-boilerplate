{
  "name": "koa2-vue-boilerplate",
  "version": "1.0.0",
  "description": "A Vue.js & Koa project",
  "private": true,
  "scripts": {
    "dev": "npm-run-all --parallel lint:watch dev:server",
    "build": "node build/build.js",
    "server": "npm-run-all --parallel lint:watch node:server",
    "start": "concurrently -k \"npm run server\" \"npm run dev\"",
    "dev:server": "node build/dev-server.js",
    "node:server": "nodemon -w app.js -w server index.js",
    "lint": "esw .",
    "lint:watch": "npm run lint -- --watch",
    "clean": "rimraf server/public/* dist",
    "release:copy":
      "shx mkdir -p dist/$npm_package_name && shx cp -r server *.js *.json .babelrc dist/$npm_package_name",
    "release:deps": "cd dist/$npm_package_name && npm i --production",
    "release:package":
      "cd dist && tar -zcvf $npm_package_name.tar.gz $npm_package_name",
    "release":
      "npm-run-all clean build release:copy release:deps release:package"
  },
  "pre-commit": ["lint"],
  "dependencies": {
    "koa": "^2.2.0",
    "koa-bodyparser": "^4.2.0",
    "koa-ejs": "^4.1.0",
    "koa-json": "^2.0.2",
    "koa-jwt": "^3.2.1",
    "koa-logger": "^2.0.1",
    "koa-router": "^7.1.1",
    "koa-static": "^3.0.0",
    "koa2-history-api-fallback": "^0.0.2",
    "lodash": "^4.17.4",
    "babel-preset-env": "^1.3.2",
    "babel-plugin-transform-runtime": "^6.22.0",
    "babel-register": "^6.22.0"
  },
  "devDependencies": {
    "axios": "^0.15.3",
    "bcryptjs": "^2.4.0",
    "element-ui": "^1.2.9",
    "js-cookie": "^2.1.4",
    "node-sass": "^4.5.3",
    "normalize.css": "^7.0.0",
    "nprogress": "^0.2.0",
    "sass-loader": "^6.0.6",
    "standard-error": "^1.1.0",
    "stylus": "^0.54.5",
    "stylus-loader": "^2.4.0",
    "vue": "^2.2.6",
    "vue-router": "^2.3.1",
    "vuex": "^2.3.1",
    "whatwg-fetch": "^2.0.3",
    "autoprefixer": "^6.7.2",
